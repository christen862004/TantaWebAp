@model Employee
@{
    ViewData["Title"] = "New";
    SelectList DEptOptions = new SelectList(ViewBag.DeptList, "Id", "Name");
}

<h1>New</h1>
<form method="post" asp-action="SaveNew" asp-controller="Employee">
    @* asp-route-id="@Model.Id" *@
    <!--serial no hidden-->
    <div asp-validation-summary="All" class="text-danger"></div>
   <div>
       <label asp-for="Name"></label>
       <input class="form form-control" asp-for="Name" />
       <span asp-validation-for="Name" class="text-danger"></span>
   </div>
    <div>
        <label asp-for="Salary"></label>
        <input class="form form-control" asp-for="Salary"/>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input class="form form-control" asp-for="Email"/>
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="ImageURL"></label>
        <input class="form form-control" asp-for="ImageURL"/>
        <span asp-validation-for="ImageURL" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        <select class="form form-control" asp-for="DepartmentId" asp-items="DEptOptions">
            <option value="0">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>

    </div>
   <input type="submit" class="btn btn-success" value="Create"/>
</form>

<a asp-action="Index">Back To List</a>
<!--Link to Script Jquerty Scripts to active client Side Validation-->
@section Scripts{
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}